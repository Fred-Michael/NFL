<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - NFPL</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <div class="container">
        <header class="text-center text-white">
            <h1 class="bg-primary mt-3 p-3">NPFL Teams</h1>
            @if (TempData["message"] != null)
            {
                <h4 class="bg-success p-2">@TempData["message"]</h4>
            }

            @if (!ViewContext.View.Path.Contains("Favorites"))
            {
                var session = new NFPL.Sessions.NFLSession(Context.Session);
                <h5 class="bg-info p-2">
                    <a asp-controller="Favorites" asp-action="Index" class="text-white">My Favorite Teams</a>
                    <span class="badge badge-light">@session.GetTeamCount()</span>
                </h5>
            }
        </header>
        <main>
            @RenderBody()
        </main>
    </div>

    <div class="container mt-4 mb-0">
        <footer class="border-top text-muted">
            <div>
                &copy; 2020 - NFPL
            </div>
        </footer>
    </div>
</body>
</html>
